@page "/AdminDashboard"
@inject NavigationManager Navigation

<div class="admin-container">

    <aside class="sidebar">
        <div class="sidebar-header">
            <span class="trophy">🏆</span> Admin Panel
        </div>

        <div class="voting-status">
            Voting ist beendet
        </div>

        <nav class="sidebar-menu">
            <button class="menu-button" @onclick="@(() => NavigateTo("/AdminDashboard"))"
                    aria-current="page">
                📊 Dashboard
            </button>

            <button class="menu-button" @onclick="@(() => NavigateTo("/QR-Code"))">🔗 QR Codes</button>

            <button class="menu-button" @onclick="@(() => NavigateTo("/ExcelUpload"))">📤 Excel Upload</button>

            <button class="menu-button" @onclick="@(() => NavigateTo("/ExcelExport"))">📥 Excel Export</button>

            <button class="menu-button" @onclick="@(() => NavigateTo("/ResetVoting"))">🔄 Reset Voting</button>
        </nav>
    </aside>

    <main class="content">

        <h1 class="dashboard-title">Friends of Award Dashboard</h1>
        <p class="dashboard-subtitle">Live-Auswertung & Verwaltung der Abstimmung</p>

        <!-- Beispiel Score Cards hier -->
        <section class="score-cards">

            <div class="score-card">
                <h2>#1</h2>
                <p class="project-name">Digitale Kundenverwaltung für kleine Unternehmen</p>
                <p class="score">0 <span class="points-label">Punkte</span></p>
                <div class="stars">⭐ 0 ★ 0 ✩ 0</div>
            </div>

            <!-- weitere Cards ... -->

        </section>

        <!-- Tabelle -->
        <section class="diploma-table-section">
            <h2>Alle Diplomarbeiten</h2>
            <table class="diploma-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Thema</th>
                        <th>Punkte</th>
                        <th>⭐</th>
                        <th>★</th>
                        <th>✩</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Digitale Kundenverwaltung für kleine Unternehmen</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                    <!-- Weitere Zeilen -->
                </tbody>
            </table>
        </section>

    </main>

</div>

@code {
    void NavigateTo(string url)
    {
        Navigation.NavigateTo(url);
    }
}
